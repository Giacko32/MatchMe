   <children>
      <ImageView fitHeight="255.0" fitWidth="273.0" layoutX="253.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/copia.png" />
         </image>
         <cursor>
            <Cursor fx:constant="CLOSED_HAND" />
         </cursor></ImageView>
      <Label layoutX="252.0" layoutY="247.0" text="Username" />
      <TextField layoutX="339.0" layoutY="243.0" />
      <Label layoutX="254.0" layoutY="290.0" text="Password" />
      <PasswordField layoutX="339.0" layoutY="286.0" />
