           <font>
               <Font name="System Bold" size="12.0" />
           </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
       </Button>
      <Button layoutX="427.0" layoutY="342.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="71.0" style="-fx-background-color: #03b53f;" text="Accedi" textFill="WHITE" onMouseClicked="#ClickAccedi">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Label layoutX="311.0" layoutY="392.0" onMouseClicked="#ClickRecovery" text="Recupera password" textFill="#03b53f" underline="true">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Label>
   </children>
</AnchorPane>
